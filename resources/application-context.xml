<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<context:annotation-config />
	<context:component-scan base-package="main.java.com.luxoft.bankapp" />

	<bean id="bankDao" class="main.java.com.luxoft.bankapp.dao.BankDAOImpl">
	</bean>
	<bean id="clientDao" class="main.java.com.luxoft.bankapp.dao.ClientDAOImpl">
	</bean>
	<bean id="accountDao" class="main.java.com.luxoft.bankapp.dao.AccountDAOImpl">
	</bean>
	<bean id="bankApplication" class="main.java.com.luxoft.bankapp.service.BankApplication">
	</bean>
	<bean id="bankServerThreaded" class="main.java.com.luxoft.bankapp.service.BankServerThreaded">
	</bean>
	<bean id="bank" class="main.java.com.luxoft.bankapp.model.Bank">
	</bean>
	<bean id="ServerThread" class="main.java.com.luxoft.bankapp.service.ServerThread">
	</bean>
	<bean id="DBSelectClientCommander"
		class="main.java.com.luxoft.bankapp.commands.DBSelectClientCommander"
		autowire="byType">
	</bean>
	<bean id="DBSelectBankCommander"
		class="main.java.com.luxoft.bankapp.commands.DBSelectBankCommander"
		autowire="byType">
	</bean>
	<bean id="bankService" class="main.java.com.luxoft.bankapp.service.BankServiceImpl">
		<!-- bankDao, clientDao and accountDao will be injected here -->
	</bean>
	<bean id="addClientCommand" class="main.java.com.luxoft.bankapp.commands.AddClientCommand"
		autowire="byType">
	</bean>
	<bean id="findClientCommand" class="main.java.com.luxoft.bankapp.commands.FindClientCommand"
		autowire="byType">
	</bean>
	<bean id="depositCommand" class="main.java.com.luxoft.bankapp.commands.DepositCommand"
		autowire="byType">
	</bean>
	<bean id="withdrawCommand" class="main.java.com.luxoft.bankapp.commands.WithdrawCommand"
		autowire="byType">
	</bean>
	<bean id="testAddClientCommand"
		class="test.java.com.luxoft.bankapp.test.service.AddClientCommandTest"
		autowire="byType">
	</bean>
	<bean id="testFindClientCommand"
		class="test.java.com.luxoft.bankapp.test.service.FindClientCommandTest"
		autowire="byType">
	</bean>
	
	<bean id="bankCommander" class="main.java.com.luxoft.bankapp.service.BankCommander"
		scope="singleton">
		<property name="commands">
			<map>
				<entry key="1">
					<bean class="main.java.com.luxoft.bankapp.commands.AddClientCommand"
						autowire="byType" />
				</entry>
				<entry key="2">
					<bean class="main.java.com.luxoft.bankapp.commands.FindClientCommand" />
				</entry>
				<entry key="3">
					<bean class="main.java.com.luxoft.bankapp.commands.GetAccountsCommand"
						autowire="byType" />
				</entry>
				<entry key="4">
					<bean class="main.java.com.luxoft.bankapp.commands.DepositCommand"
						autowire="byType" />
				</entry>
				<entry key="5">
					<bean class="main.java.com.luxoft.bankapp.commands.WithdrawCommand"
						autowire="byType" />
				</entry>
				<entry key="6">
					<bean class="main.java.com.luxoft.bankapp.commands.TransferCommand"
						autowire="byType" />
				</entry>
				<entry key="7">
					<bean class="main.java.com.luxoft.bankapp.commands.DBReportCommander"
						autowire="byType" />
				</entry>
				<entry key="8">
					<bean class="main.java.com.luxoft.bankapp.commands.ExitCommand"
						autowire="byType" />
				</entry>
			</map>
		</property>
	</bean>
</beans>
