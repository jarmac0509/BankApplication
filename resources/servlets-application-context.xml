<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<context:annotation-config />

	<bean id="bankDao" class="main.java.com.luxoft.bankapp.dao.BankDAOImpl">
		<property name="bankCommander" ref="bankCommander">
		</property>
	</bean>
	<bean id="clientDao" class="main.java.com.luxoft.bankapp.dao.ClientDAOImpl">
	</bean>

	<bean id="bankService" class="main.java.com.luxoft.bankapp.service.BankServiceImpl"
		autowire="byType">
		<property name="bankDao" ref="bankDao">
		</property>
		<property name="clientDao" ref="clientDao">
		</property>
	</bean>
	<bean id="bankCommander" class="main.java.com.luxoft.bankapp.service.BankCommander"
		scope="singleton">
		<property name="commands">
			<map>
				<entry key="1">
					<bean class="main.java.com.luxoft.bankapp.commands.AddClientCommand"
						autowire="byType" />
				</entry>
				<entry key="2">
					<bean class="main.java.com.luxoft.bankapp.commands.FindClientCommand" />
				</entry>
				<entry key="3">
					<bean class="main.java.com.luxoft.bankapp.commands.GetAccountsCommand"
						autowire="byType" />
				</entry>
				<entry key="4">
					<bean class="main.java.com.luxoft.bankapp.commands.DepositCommand"
						autowire="byType" />
				</entry>
				<entry key="5">
					<bean class="main.java.com.luxoft.bankapp.commands.WithdrawCommand"
						autowire="byType" />
				</entry>
				<entry key="6">
					<bean class="main.java.com.luxoft.bankapp.commands.TransferCommand"
						autowire="byType" />
				</entry>
				<entry key="7">
					<bean class="main.java.com.luxoft.bankapp.commands.DBReportCommander"
						autowire="byType" />
				</entry>
				<entry key="8">
					<bean class="main.java.com.luxoft.bankapp.commands.ExitCommand"
						autowire="byType" />
				</entry>
			</map>
		</property>
	</bean>

</beans>
